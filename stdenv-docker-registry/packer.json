{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "ssh_pty": true,
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "ap-northeast-1",
    "source_ami": "ami-05964063",
    "instance_type": "t1.micro",
    "ssh_username": "ec2-user",
    "ssh_timeout": "5m",
    "user_data_file" : "startup.sh",
    "launch_block_device_mappings": [
      {
        "device_name": "/dev/sda1",
        "volume_size": 30,
        "delete_on_termination": true
      }
    ],
    "run_tags":      {"Name": "Packer stdenv-docker-registry"},
    "snapshot_tags": {"Name": "Packer stdenv-docker-registry"},
    "ami_name": "stdenv-docker-registry-{{isotime | clean_ami_name}}",
    "ami_groups": "all"
  }],
 "provisioners": [
   {
    "type": "file",
    "source": "daemon.json",
    "destination": "~/"
   }
   ,
   {
    "type": "file",
    "source": "run_docker_registry.sh",
    "destination": "~/"
   }
   ,
   {
    "type": "shell",
    "inline": [
       "sudo yum install -y docker git"
      ,"sudo usermod -g docker ec2-user"
      ,"sudo service docker start"
      ,"sh -c 'sleep 10'"
      ,"sudo docker info"
      ,"sudo mkdir -p /etc/docker"
      ,"sudo cp -p ~/daemon.json /etc/docker/daemon.json"
      ,"sudo docker pull registry"
      ,"sudo chmod 755 run_docker_registry.sh"
      ,"rm run_docker_registry.sh"
      ,"echo '@reboot ~/run_docker_registry.sh 2>&1 > ~/my_docker_registry.log' | crontab"
      ,"sudo iptables -L"
      ,"sudo iptables -A INPUT -i lo -j ACCEPT"
      ,"sudo iptables -A INPUT -p icmp -j ACCEPT"
      ,"sudo iptables -A INPUT -p tcp -m tcp --dport 8000 -j ACCEPT"
      ,"sudo service iptables save"
      ,"sudo service iptables restart"
      ,"sudo cat /etc/sysconfig/iptables"
      ,"echo 'Completed Packer'"
     ]
   }
  ]
}
