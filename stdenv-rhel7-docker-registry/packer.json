{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "rhel_user":      "{{env `RHEL_USER`}}",
    "rhel_password":  "{{env `RHEL_PASSWORD`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "ssh_pty": true,
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "ap-northeast-1",
    "source_ami": "ami-bb46fadd",
    "ami_virtualization_type": "hvm",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ssh_timeout": "5m",
    "user_data_file" : "startup.sh",
    "launch_block_device_mappings": [
      {
        "device_name": "/dev/sda1",
        "volume_size": 100,
        "delete_on_termination": true
      }
    ],
    "run_tags":      {"Name": "Packer stdenv-rhel7-docker-registry"},
    "snapshot_tags": {"Name": "Packer stdenv-rhel7-docker-registry"},
    "ami_name": "stdenv-rhel7-docker-registry-{{isotime | clean_ami_name}}",
    "ami_users": [
     "028299853772"
    ]
  }],
 "provisioners": [
   {
    "type": "file",
    "source": "run_docker_registry.sh",
    "destination": "~/"
   }
   ,
   {
    "type": "file",
    "source": "no-ip2.conf",
    "destination": "~/"
   }
   ,
   {
    "type": "file",
    "source": "registry.service",
    "destination": "~/"
   }
   ,
   {
    "type": "file",
    "source": "start-registry.sh",
    "destination": "~/"
   }
   ,
   {
    "type": "file",
    "source": "stop-registry.sh",
    "destination": "~/"
   }
   ,
   {
    "type": "shell",
    "inline": [
       "lsblk"
      
      ,"echo make sure docker is running"
      ,"sudo systemctl enable docker"
      ,"sudo systemctl start  docker"
      ,"bash -c 'sleep 10'"
      ,"sudo docker info"
      
      ,"echo installing registry"
      ,"sudo docker pull registry"
      ,"sudo docker run -d -v /opt/registry:/var/lib/registry -p 8000:5000 registry"
      ,"sudo install -m 644 registry.service /etc/systemd/system/"
      ,"rm registry.service"
      ,"sudo install -m 755 start-registry.sh stop-registry.sh /root/"
      ,"rm start-registry.sh stop-registry.sh"
      ,"sudo systemctl enable registry"

      ,"echo installing noip"
      ,"sudo install -m 600 no-ip2.conf /etc/"
      ,"rm -f no-ip2.conf"
      ,"sudo systemctl enable noip"
      ,"sudo systemctl start  noip"
     ]
   }
  ]
}
