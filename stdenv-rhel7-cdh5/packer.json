{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "ssh_pty": true,
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "ap-northeast-1",
    "source_ami": "ami-35556534",
    "ami_virtualization_type": "hvm",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ssh_timeout": "5m",
    "user_data_file" : "startup.sh",
    "launch_block_device_mappings": [
      {
        "device_name": "/dev/sda1",
        "volume_size": 30,
        "delete_on_termination": true
      }
    ],
    "run_tags":      {"Name": "Packer stdenv-rhel7-cdh5"},
    "snapshot_tags": {"Name": "Packer stdenv-rhel7-cdh5"},
    "ami_name": "stdenv-rhel7-cdh5-{{isotime | clean_ami_name}}",
    "ami_groups": "all"
  }],
 "provisioners": [
   {
    "type": "file",
    "source": "cloudera-cdh5.repo",
    "destination": "~/cloudera-cdh5.repo"
   }
   ,
   {
    "type": "shell",
    "inline": [
       "sudo setenforce 0"
      ,"sudo cp -p ~/cloudera-cdh5.repo /etc/yum.repos.d/cloudera-cdh5.repo"
      ,"sudo yum clean all && sudo yum install -y hadoop-yarn-resourcemanager hadoop-hdfs-namenode hadoop-hdfs-secondarynamenode hadoop-yarn-nodemanager hadoop-hdfs-datanode hadoop-mapreduce hadoop-mapreduce-historyserver hadoop-yarn-proxyserver hadoop-client"
     ]
   }
  ]
}
