{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "ssh_pty": true,
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "ap-northeast-1",
    "source_ami": "ami-31228957",
    "ami_virtualization_type": "hvm",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ssh_timeout": "5m",
    "user_data_file" : "startup.sh",
    "launch_block_device_mappings": [
      {
        "device_name": "/dev/sda1",
        "volume_size": 100,
        "delete_on_termination": true
      }
    ],
    "run_tags":      {"Name": "stdenv_rhel7_repo-{{isotime \"20060102_0304\"}}"},
    "snapshot_tags": {"Name": "stdenv_rhel7_repo-{{isotime \"20060102_0304\"}}"},
    "ami_name": "stdenv_rhel7_repo-{{isotime \"20060102_0304\"}}",
    "ami_users": [
     "028299853772"
    ]
  }],
 "provisioners": [
   {
    "type": "file",
    "source": "download_and_createrepo.sh",
    "destination": "~/"
   }
   ,
   {
    "type": "file",
    "source": "cloudera-cdh5.repo",
    "destination": "~/"
   }
   ,
   {
    "type": "file",
    "source": "cloudera-kudu.repo",
    "destination": "~/"
   }
   ,
   {
    "type": "file",
    "source": "cloudera-manager.repo",
    "destination": "~/"
   }
   ,
   {
    "type": "file",
    "source": "nginx.repo",
    "destination": "~/"
   }
   ,
   {
    "type": "file",
    "source": "daemon.json",
    "destination": "~/"
   }
   ,
   {
    "type": "file",
    "source": "docker-storage",
    "destination": "~/"
   }
   ,
   {
    "type": "file",
    "source": "kubernetes.repo",
    "destination": "~/"
   }
   ,
   {
    "type": "file",
    "source": "localrepo.repo",
    "destination": "~/"
   }
   ,
   {
    "type": "file",
    "source": "repo-switch-internet.sh",
    "destination": "~/"
   }
   ,
   {
    "type": "file",
    "source": "repo-switch-local.sh",
    "destination": "~/"
   }
   ,
   {
    "type": "file",
    "source": "mysql-connector-java-5.1.44-bin.jar",
    "destination": "~/"
   }
   ,
   {
    "type": "file",
    "source": "ojdbc6.jar",
    "destination": "~/"
   }
   ,
   {
    "type": "shell",
    "inline": [
       "lsblk"
      
      ,"echo disabling selinux"
      ,"sudo setenforce 0"
      ,"echo SELINUX=disabled | sudo tee /etc/selinux/config"
            
      ,"echo installing mysql oracle connector"
      ,"sudo mkdir -p /usr/share/java"
      ,"sudo cp mysql-connector-java-*-bin.jar /usr/share/java/mysql-connector-java.jar"
      ,"sudo cp ojdbc6.jar /usr/share/java/oracle-connector-java.jar"

      ,"echo installing pip"
      ,"wget https://bootstrap.pypa.io/get-pip.py"
      ,"sudo python get-pip.py"
      ,"sudo pip install awscli"
      
      ,"echo enabling repo"
      ,"sudo mv ~/kubernetes.repo /etc/yum.repos.d/kubernetes.repo"
      ,"sudo mv -t /etc/yum.repos.d/ ~/cloudera-cdh5.repo ~/cloudera-kudu.repo ~/cloudera-manager.repo ~/nginx.repo"
      ,"sudo sed -i -e 's/^enabled=0/enabled=1/g' /etc/yum.repos.d/redhat-rhui.repo"
      ,"sudo yum-config-manager --disable rhui-REGION-client-config-server-7"

      ,"sudo yum install -y createrepo"
      ,"sudo yum update -y openssl"

      ,"echo installing docker"
      ,"sudo yum install -y docker"
      ,"sudo mv ~/daemon.json /etc/docker/daemon.json"
      ,"sudo mv ~/docker-storage /etc/sysconfig/docker-storage"
      ,"sudo systemctl enable docker"

      ,"echo installing yum-plugin-downloadonly"
      ,"sudo yum install -y yum-plugin-downloadonly"
      ,"sudo mkdir -p /opt/repo"

      ,"echo downloading mysql"
      ,"wget http://repo.mysql.com/mysql-community-release-el7-5.noarch.rpm"
      ,"sudo rpm -ivh mysql-community-release-el7-5.noarch.rpm"
      ,"rm mysql-community-release-el7-5.noarch.rpm"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo mysql-server mysql-community-server mysql"

      ,"echo downloading packages..."
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo oracle-j2sdk1.7 cloudera-manager-daemons cloudera-manager-server cloudera-manager-agent  cloudera-manager-server-db-2"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo ansible"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo chrony"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo nodejs npm"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo nginx"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo net-tools"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo git"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo squid"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo docker"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo kubelet kubeadm kubectl"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo kubernetes-ansible"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo zeromq"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo bind-chroot bind-utils"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo zabbix22"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo yamllint"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo sqlite"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo R R-java R-java-devel"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo rabbitmq-server rabbitmq-java-client"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo rust"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo nagios nagios-plugins-all"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo nkf"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo jq"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo json_simple"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo json-parser json-parser-devel"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo httpd"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo binutils"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo hadoop-yarn-resourcemanager hadoop-hdfs-namenode hadoop-hdfs-secondarynamenode hadoop-yarn-nodemanager hadoop-hdfs-datanode hadoop-mapreduce hadoop-mapreduce-historyserver hadoop-yarn-proxyserver hadoop-client"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo noip"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo krb5-server krb5-workstation krb5-libs krb5-auth-dialog krb5-pkinit-openssl"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo sssd sssd-tools sssd-client sssd-ldap openldap-clients oddjob oddjob-mkhomedir"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo dnsmasq"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo impala impala-server impala-state-store impala-catalog impala-shell"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo kudu kudu-master kudu-tserver kudu-client0 kudu-client-devel"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo postgresql postgresql-libs postgresql-server"
      ,"sudo yum install --downloadonly --downloaddir=/opt/repo nfs-utils"

      ,"echo downloading repo"
      ,"sudo yum install -y createrepo"

      ,"echo skip : sh download_and_createrepo.sh cloudera-cdh5    /var/html/www/cdh5/redhat/7/x86_64/cdh/5"
      ,"echo skip : sh download_and_createrepo.sh cloudera-manager /var/html/www/cm5/redhat/7/x86_64/cm/5.13.0"
      ,"echo skip : sh download_and_createrepo.sh cloudera-kudu    /var/html/www/kudu/redhat/7/x86_64/kudu/5"
     
      ,"echo create repo"
      ,"sudo createrepo /opt/repo"
      ,"sudo mv localrepo.repo /etc/yum.repos.d/"

      ,"cd ~ && chmod +x repo-switch-internet.sh repo-switch-local.sh"
      ,"./repo-switch-local.sh"


      ,"echo Completed Packer"
     ]
   }
  ]
}
