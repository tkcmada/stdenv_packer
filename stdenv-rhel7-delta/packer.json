{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "ssh_pty": true,
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "ap-northeast-1",
    "source_ami": "ami-7ca5c61a",
    "ami_virtualization_type": "hvm",
    "instance_type": "t2.medium",
    "ssh_username": "ec2-user",
    "ssh_timeout": "5m",
    "user_data_file" : "startup.sh",
    "launch_block_device_mappings": [
      {
        "device_name": "/dev/sda1",
        "volume_size": 100,
        "delete_on_termination": true
      }
    ],
    "run_tags":      {"Name": "stdenv_rhel7-{{isotime \"20060102_0304\"}}"},
    "snapshot_tags": {"Name": "stdenv_rhel7-{{isotime \"20060102_0304\"}}"},
    "ami_name": "stdenv_rhel7-{{isotime \"20060102_0304\"}}",
    "ami_users": [
     "028299853772"
    ]
  }],
 "provisioners": [
   {
    "type": "file",
    "source": "packer.json",
    "destination": "~/download/packer.delta.json"
   }
   ,
   {
    "type": "file",
    "source": "../rhel/packer.json",
    "destination": "~/download/packer.base.json"
   }
   ,
   {
    "type": "file",
    "source": "download/td.repo",
    "destination": "~/"
   }
   ,
   {
    "type": "shell",
    "inline": [
       "echo enable repositories for internet"
      ,"./repo-switch-internet.sh"

      ,"echo upgrade curl"
      ,"sudo yum upgrade -y curl"

      ,"echo installing td-agent(fluentd) and plugins"
      ,"curl --tlsv1.2 -L https://toolbelt.treasuredata.com/sh/install-redhat-td-agent3.sh | sudo sh"
      ,"sudo /opt/td-agent/embedded/bin/fluent-gem install fluent-plugin-cloudwatch-logs"
      ,"sudo /opt/td-agent/embedded/bin/fluent-gem install fluent-plugin-kinesis"
      ,"sudo /opt/td-agent/embedded/bin/fluent-gem install fluent-plugin-suppress"
      ,"sudo /opt/td-agent/embedded/bin/fluent-gem install fluent-plugin-s3"
      ,"sudo /opt/td-agent/embedded/bin/fluent-gem install fluent-plugin-ecs-metadata-filter" 
      ,"sudo /opt/td-agent/embedded/bin/fluent-gem install fluent-plugin-ecs-filter" 
      ,"sudo /opt/td-agent/embedded/bin/fluent-gem install fluent-plugin-grep" 

      ,"echo downloading yum packages..."
      ,"sudo mv td.repo /etc/yum.repos.d/"
      ,"sudo yumdownloader --resolve --destdir=/opt/repo kubeadm-1.8.5.0-x86_64 kubelet-1.8.5-0.x86_64 kubectl-1.8.5-0.x86_64"

      ,"echo createrepo is required as new yum packages are installed"
      ,"sudo createrepo --update /opt/repo"

      ,"echo switch back to local repository"
      ,"./repo-switch-local.sh"

      ,"pyenv global anaconda3-5.0.1"
      ,"echo installing python packages via conda into anaconda python"
      ,"yes | conda install chainer"

      ,"echo swtich back to system python and install pip package to system python"
      ,"pyenv global system"
      ,"sudo pip install awslogs"

      ,"echo Completed Packer"
     ]
   }
  ]
}
