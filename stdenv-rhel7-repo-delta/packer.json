{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "ssh_pty": true,
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "ap-northeast-1",
    "source_ami": "ami-82aa23e4",
    "ami_virtualization_type": "hvm",
    "instance_type": "t2.large",
    "ssh_username": "ec2-user",
    "ssh_timeout": "5m",
    "user_data_file" : "startup.sh",
    "launch_block_device_mappings": [
      {
        "device_name": "/dev/sda1",
        "volume_size": 100,
        "delete_on_termination": true
      }
    ],
    "run_tags":      {"Name": "stdenv_rhel7_repo-{{isotime \"20060102_0304\"}}"},
    "snapshot_tags": {"Name": "stdenv_rhel7_repo-{{isotime \"20060102_0304\"}}"},
    "ami_name": "stdenv_rhel7_repo-{{isotime \"20060102_0304\"}}",
    "ami_users": [
     "028299853772"
    ]
  }],
 "provisioners": [
   {
    "type": "shell",
    "inline": [
       "echo enable repositories for internet"
      ,"./repo-switch-internet.sh"

      ,"echo downloading yum packages..."
      ,"sudo yumdownloader --resolve --destdir=/opt/repo kubeadm-1.8.5.0-x86_64 kubelet-1.8.5-0.x86_64 kubectl-1.8.5-0.x86_64"

      ,"echo installing python package via pip into system python"
      ,"sudo pip install awslogs"

      ,"echo installing yum packages"
      ,"sudo yum install -y bzip2"

      ,"echo installing pyenv"
      ,"git clone https://github.com/yyuu/pyenv.git ~/.pyenv"
      ,"echo 'export PYENV_ROOT=\"$HOME/.pyenv\"' >> ~/.bashrc"
      ,"echo 'export PATH=\"$PYENV_ROOT/bin:$PATH\"' >> ~/.bashrc"
      ,"echo 'eval \"$(pyenv init -)\"' >> ~/.bashrc"
      ,"source ~/.bashrc"

      ,"echo installing anaconda via pyenv"
      ,"pyenv install anaconda3-5.0.1"
      ,"pyenv rehash"
      ,"pyenv versions"
      ,"pyenv global anaconda3-5.0.1"
      ,"yes | conda install chainer"

      ,"echo swtich back to system python"
      ,"pyenv global system"

      ,"echo createrepo is required if new yum packages are installed"
      ,"sudo createrepo --update /opt/repo"

      ,"echo switch back to local repository"
      ,"./repo-switch-local.sh"

      ,"echo Completed Packer"
     ]
   }
  ]
}
